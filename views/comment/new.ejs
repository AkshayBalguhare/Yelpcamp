<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Create New Comment for <%= campground.name%></h1>
       <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>/comment" method="POST">
              
                    <div class='form-group'>
                <input class="form-control" type="text" placeholder="comment" name="comment[text]">
                </div>
                <div class='form-group'>
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds/<%=campground._id %>" type="button">Go back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>